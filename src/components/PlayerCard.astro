---
const { jugador } = Astro.props;
const variacionColor = jugador.variacion > 0 ? "text-green-600" :
                       jugador.variacion < 0 ? "text-red-600" : "text-gray-500";
                       ---

                       <div class="bg-white rounded-xl shadow p-4 flex flex-col items-center">
                         <img src={jugador.foto} alt={jugador.nombre} class="w-24 h-24 rounded-full object-cover mb-3" />
                           <h3 class="text-lg font-bold">{jugador.nombre}</h3>
                             <p class="text-sm text-gray-500">{jugador.posicion} — {jugador.edad} años</p>
                               <p class="mt-2 text-yellow-600 font-semibold">{jugador.puntos} pts</p>
                                 <p class="mt-1">€{jugador.valor_mercado.toLocaleString()}</p>
                                   <p class={`mt-1 ${variacionColor}`}>
                                       {jugador.variacion >= 0 ? "+" : ""}{(jugador.variacion / 1000000).toFixed(1)}M
                                         </p>
                                         </div>