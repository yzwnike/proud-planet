---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Asistencias - Ranking La Liga 2025/26" 
  description="Ranking de jugadores con más asistencias en La Liga EA Sports 2025/26"
>
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-green-900 to-slate-900">
    <div class="container mx-auto px-4 py-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
          <span class="bg-gradient-to-r from-green-400 to-blue-600 bg-clip-text text-transparent">
            🅰️ Ranking Asistencias
          </span>
        </h1>
        <p class="text-xl text-gray-300 mb-2">Jugadores con más asistencias - Temporada 2025/26</p>
        <div class="flex justify-center items-center gap-4 text-gray-400">
          <span class="px-3 py-1 bg-green-600/20 rounded-full text-sm">Actualizado en tiempo real</span>
        </div>
      </div>

      <!-- Navegación de secciones -->
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        <a href="/laliga/" class="px-6 py-3 bg-gradient-to-r from-orange-500 to-red-600 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          📊 Clasificación
        </a>
        <a href="/laliga/pichichi" class="px-6 py-3 bg-gradient-to-r from-yellow-500 to-orange-500 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          ⚽ Pichichi
        </a>
        <a href="/laliga/asistencias" class="px-6 py-3 bg-gradient-to-r from-green-500 to-blue-500 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 ring-2 ring-green-400">
          🅰️ Asistencias
        </a>
        <a href="/laliga/proximos" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          📅 Próximos Partidos
        </a>
      </div>

      <!-- Ranking de Asistencias -->
      <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-2xl p-6 mb-8">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-white">🎯 Ranking de Asistencias</h2>
          <div class="flex items-center gap-2 text-gray-300">
            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
            <span class="text-sm">Actualizado automáticamente</span>
          </div>
        </div>

        <!-- Loading placeholder -->
        <div id="loading-assists" class="flex justify-center items-center py-12">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-green-500"></div>
          <span class="ml-4 text-white">Cargando asistencias...</span>
        </div>

        <!-- Lista de asistentes -->
        <div id="assists-container" class="hidden">
          <div class="grid grid-cols-1 gap-4">
            <div id="assists-list"></div>
          </div>
        </div>
      </div>

      <!-- Estadísticas adicionales -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-white mb-3">📈 Estadísticas</h3>
          <div class="space-y-2">
            <div class="flex justify-between text-gray-300">
              <span>Total asistencias:</span>
              <span id="total-assists" class="text-green-400">0</span>
            </div>
            <div class="flex justify-between text-gray-300">
              <span>Asistentes activos:</span>
              <span id="active-assisters" class="text-blue-400">0</span>
            </div>
            <div class="flex justify-between text-gray-300">
              <span>Mejor promedio:</span>
              <span id="best-avg-assists" class="text-orange-400">0.0</span>
            </div>
          </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-white mb-3">🎯 Máximo Asistente</h3>
          <div id="top-assister" class="text-center">
            <div class="animate-pulse bg-gray-700/50 rounded-lg p-4">
              <div class="h-4 bg-gray-600 rounded mb-2"></div>
              <div class="h-6 bg-gray-600 rounded"></div>
            </div>
          </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-white mb-3">⚡ Mejor Promedio</h3>
          <div id="best-avg-assister" class="text-center">
            <div class="animate-pulse bg-gray-700/50 rounded-lg p-4">
              <div class="h-4 bg-gray-600 rounded mb-2"></div>
              <div class="h-6 bg-gray-600 rounded"></div>
            </div>
          </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-white mb-3">📅 Temporada</h3>
          <div class="text-center text-gray-300">
            <p class="text-sm">2025/26</p>
            <p class="text-2xl font-bold text-green-400">Jornada 0</p>
            <p class="text-xs text-gray-400">Inicio: 15 Ago 2025</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Función para cargar asistencias
  async function loadAssists() {
    try {
      const response = await fetch('/api/laliga/asistencias');
      const result = await response.json();
      
      if (result.success) {
        displayAssists(result.data.asistentes);
        updateAssistStats(result.data.asistentes);
      } else {
        throw new Error(result.error);
      }
    } catch (error) {
      console.error('Error loading assists:', error);
      document.getElementById('assists-list').innerHTML = `
        <div class="text-center py-12">
          <div class="text-6xl mb-4">🅰️</div>
          <h3 class="text-2xl font-bold text-white mb-2">Sin asistencias aún</h3>
          <p class="text-gray-400">La temporada 2025/26 comenzará mañana</p>
          <p class="text-sm text-gray-500 mt-2">15 de Agosto de 2025</p>
        </div>
      `;
      
      // Actualizar estadísticas vacías
      document.getElementById('total-assists').textContent = '0';
      document.getElementById('active-assisters').textContent = '0';
      document.getElementById('best-avg-assists').textContent = '0.0';
      document.getElementById('top-assister').innerHTML = `
        <div class="text-center text-gray-400">
          <div class="text-3xl mb-2">🎯</div>
          <p class="text-sm">Sin asistentes</p>
          <p class="text-xs">Temporada sin empezar</p>
        </div>
      `;
      document.getElementById('best-avg-assister').innerHTML = `
        <div class="text-center text-gray-400">
          <div class="text-3xl mb-2">⚡</div>
          <p class="text-sm">Sin datos</p>
          <p class="text-xs">Temporada sin empezar</p>
        </div>
      `;
    } finally {
      document.getElementById('loading-assists').classList.add('hidden');
      document.getElementById('assists-container').classList.remove('hidden');
    }
  }

  // Función para mostrar asistencias
  function displayAssists(assisters) {
    const container = document.getElementById('assists-list');
    
    if (assisters.length === 0) {
      container.innerHTML = `
        <div class="text-center py-12">
          <div class="text-6xl mb-4">🅰️</div>
          <h3 class="text-2xl font-bold text-white mb-2">Sin asistencias aún</h3>
          <p class="text-gray-400">La temporada 2025/26 comenzará mañana</p>
          <p class="text-sm text-gray-500 mt-2">15 de Agosto de 2025</p>
        </div>
      `;
      return;
    }

    container.innerHTML = assisters.map((assister, index) => {
      let medalClass = '';
      let medal = '';
      
      if (index === 0) {
        medalClass = 'bg-gradient-to-r from-green-400 to-green-600 text-black';
        medal = '🥇';
      } else if (index === 1) {
        medalClass = 'bg-gradient-to-r from-gray-300 to-gray-500 text-black';
        medal = '🥈';
      } else if (index === 2) {
        medalClass = 'bg-gradient-to-r from-amber-600 to-amber-800 text-white';
        medal = '🥉';
      } else {
        medalClass = 'bg-white/10';
        medal = `#${index + 1}`;
      }

      return `
        <div class="${medalClass} backdrop-blur-sm rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-3">
              <span class="text-2xl font-bold">${medal}</span>
              <div>
                <h3 class="font-bold text-lg ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-white'}">${assister.jugador}</h3>
                <p class="text-sm ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-300'}">${assister.equipo}</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-3xl font-bold ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-green-400'}">${assister.asistencias}</div>
              <div class="text-sm ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-400'}">asistencias</div>
            </div>
          </div>
          
          <div class="grid grid-cols-3 gap-4 pt-4 border-t ${index < 3 ? (index === 0 ? 'border-black/20' : index === 1 ? 'border-black/20' : 'border-white/20') : 'border-white/20'}">
            <div class="text-center">
              <div class="text-lg font-semibold ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-white'}">${assister.partidos}</div>
              <div class="text-xs ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-400'}">Partidos</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-semibold ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-white'}">${assister.minutos}</div>
              <div class="text-xs ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-400'}">Minutos</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-semibold ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-blue-400'}">${assister.asistencias_por_partido.toFixed(2)}</div>
              <div class="text-xs ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-400'}">Por partido</div>
            </div>
          </div>
        </div>
      `;
    }).join('');
  }

  // Función para actualizar estadísticas
  function updateAssistStats(assisters) {
    const totalAssists = assisters.reduce((sum, assister) => sum + assister.asistencias, 0);
    const activeAssisters = assisters.length;
    const bestAverage = assisters.length > 0 ? Math.max(...assisters.map(a => a.asistencias_por_partido)) : 0;
    
    document.getElementById('total-assists').textContent = totalAssists;
    document.getElementById('active-assisters').textContent = activeAssisters;
    document.getElementById('best-avg-assists').textContent = bestAverage.toFixed(2);

    if (assisters.length > 0) {
      const topAssister = assisters[0];
      document.getElementById('top-assister').innerHTML = `
        <div class="text-center">
          <div class="text-4xl mb-2">🎯</div>
          <h4 class="font-bold text-white">${topAssister.jugador}</h4>
          <p class="text-sm text-gray-400">${topAssister.equipo}</p>
          <p class="text-2xl font-bold text-green-400">${topAssister.asistencias} asistencias</p>
        </div>
      `;

      const bestAvgAssister = assisters.reduce((best, current) => 
        current.asistencias_por_partido > best.asistencias_por_partido ? current : best
      );
      
      document.getElementById('best-avg-assister').innerHTML = `
        <div class="text-center">
          <div class="text-4xl mb-2">⚡</div>
          <h4 class="font-bold text-white">${bestAvgAssister.jugador}</h4>
          <p class="text-sm text-gray-400">${bestAvgAssister.equipo}</p>
          <p class="text-2xl font-bold text-blue-400">${bestAvgAssister.asistencias_por_partido.toFixed(2)}</p>
        </div>
      `;
    }
  }

  // Cargar datos cuando se carga la página
  document.addEventListener('DOMContentLoaded', () => {
    loadAssists();
    
    // Actualizar cada 30 segundos
    setInterval(loadAssists, 30000);
  });
</script>
</BaseLayout>
