          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            action: 'reset-season'
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showNotification('‚úÖ Temporada reiniciada correctamente', 'success');
          closeModal();
          loadStandings();
        } else {
          showNotification(`‚ùå Error: ${result.error}`, 'error');
        }
      } catch (error) {
        console.error('Error al reiniciar temporada:', error);
        showNotification('‚ùå Error al reiniciar la temporada', 'error');
      } finally {
        resetBtn.textContent = 'üîÑ Reiniciar';
        resetBtn.disabled = false;
      }
    });
    
    // Obtener pr√≥xima jornada
    getNextJornadaBtn.addEventListener('click', getNextJornada);
    
    // Funcionalidad del bot√≥n randomizado
    const randomizeBtn = document.getElementById('randomize-result-btn');
    randomizeBtn.addEventListener('click', () => {
      const selectedTeam = homeTeamSelect.value;
      if (!selectedTeam) {
        alert('Primero selecciona un equipo');
        return;
      }
      
      const result = generateRandomResult(selectedTeam);
      document.getElementById('home-goals-input').value = result.homeGoals;
      document.getElementById('away-goals-input').value = result.awayGoals;
      
      // Mostrar notificaci√≥n con el resultado generado
      const resultType = result.homeGoals > result.awayGoals ? 'Victoria' : 
                        result.homeGoals === result.awayGoals ? 'Empate' : 'Derrota';
      const performanceText = getPerformanceText(result.performance);
      showNotification(`üé≤ ${resultType} generada: ${selectedTeam} ${result.homeGoals}-${result.awayGoals} (${performanceText})`, 'info');
    });
    
    async function getNextJornada() {
      try {
        const response = await fetch('/api/custom-results?action=next-jornada');
        const result = await response.json();
        
        if (result.success) {
          document.getElementById('jornada-input').value = result.data.proxima_jornada;
        }
      } catch (error) {
        console.error('Error al obtener pr√≥xima jornada:', error);
      }
    }
    
    // Manejar env√≠o del formulario
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const homeTeam = homeTeamSelect.value;
      const homeGoals = parseInt(document.getElementById('home-goals-input').value);
      const awayGoals = parseInt(document.getElementById('away-goals-input').value);
      const jornada = parseInt(document.getElementById('jornada-input').value);
      
      // Calcular puntos autom√°ticamente del resultado
      let points;
      if (homeGoals > awayGoals) {
        points = 3; // Victoria
      } else if (homeGoals === awayGoals) {
        points = 1; // Empate
      } else {
        points = 0; // Derrota
      }
      
      if (!homeTeam) {
        alert('Selecciona un equipo');
        return;
      }
      
      if (homeGoals < 0 || awayGoals < 0) {
        alert('Los goles no pueden ser negativos');
        return;
      }
      
      if (isNaN(homeGoals) || isNaN(awayGoals)) {
        alert('Por favor, introduce n√∫meros v√°lidos para los goles');
        return;
      }
      
      try {
        // Mostrar loading
        const submitBtn = form.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Guardando...';
        submitBtn.disabled = true;
        
        const response = await fetch('/api/custom-points', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            action: 'add-points',
            team: homeTeam,
            points: points,
            homeGoals: homeGoals,
            awayGoals: awayGoals,
            jornada: jornada
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Mostrar mensaje de √©xito
          const resultType = points === 3 ? 'Victoria' : points === 1 ? 'Empate' : 'Derrota';
          showNotification(`‚úÖ ${resultType}: ${homeTeam} ${homeGoals}-${awayGoals} (${points} pts) - Jornada ${jornada}`, 'success');
          
          // Cerrar modal
          closeModal();
          
          // Recargar clasificaci√≥n
          loadStandings();
        } else {
          showNotification(`‚ùå Error: ${result.error}`, 'error');
        }
      } catch (error) {
        console.error('Error al a√±adir resultado:', error);
        showNotification('‚ùå Error al a√±adir el resultado', 'error');
      } finally {
        // Restaurar bot√≥n
        const submitBtn = form.querySelector('button[type="submit"]');
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }
    });
  }
  
  // Sistema de generaci√≥n de resultados randomizados por niveles
  function getTeamLevel(teamName) {
    const teamLevels = {
      'Nike FC': 'elite',     // Nivel Bar√ßa/Madrid - 85% win chance
      'Adidas FC': 'elite',   // Nivel Bar√ßa/Madrid - 85% win chance  
      'Puma FC': 'good',      // Nivel Atl√©tico/Athletic - 65% win chance
      'Kappa FC': 'medium'    // Nivel Villarreal/Betis - 45% win chance
    };
    return teamLevels[teamName] || 'medium';
  }
  
  function generateRandomResult(teamName) {
    const teamLevel = getTeamLevel(teamName);
    
    // Generar n√∫mero de rendimiento (0-100)
    const performance = Math.floor(Math.random() * 100) + 1;
    
    // Probabilidades de victoria seg√∫n nivel
    const winChances = {
      'elite': 85,   // Nike FC & Adidas FC
      'good': 65,    // Puma FC
      'medium': 45   // Kappa FC
    };
    
    const drawChance = 20; // 20% empate para todos
    const winChance = winChances[teamLevel];
    
    let homeGoals, awayGoals;
    
    // Determinar tipo de resultado basado en probabilidades
    if (performance <= winChance) {
      // VICTORIA - Generar goles seg√∫n rendimiento
      if (performance >= 95) {
        // Rendimiento excepcional (95-100) - Goleada
        homeGoals = teamLevel === 'elite' ? (4 + Math.floor(Math.random() * 3)) : (3 + Math.floor(Math.random() * 2));
        awayGoals = Math.floor(Math.random() * 2); // 0-1 goles rival
      } else if (performance >= 80) {
        // Buen rendimiento (80-94) - Victoria clara
        homeGoals = teamLevel === 'elite' ? (2 + Math.floor(Math.random() * 3)) : (2 + Math.floor(Math.random() * 2));
        awayGoals = Math.floor(Math.random() * 2); // 0-1 goles rival
      } else {
        // Rendimiento normal (win chance - 79) - Victoria ajustada
        homeGoals = 1 + Math.floor(Math.random() * 2); // 1-2 goles
        awayGoals = Math.floor(Math.random() * homeGoals); // Menos goles que nosotros
      }
    } else if (performance <= winChance + drawChance) {
      // EMPATE
      const goals = Math.floor(Math.random() * 3) + 1; // 1-3 goles
      homeGoals = goals;
      awayGoals = goals;
    } else {
      // DERROTA - El equipo juega mal
      if (performance <= 10) {
        // Rendimiento p√©simo (1-10) - Derrota humillante  
        homeGoals = Math.floor(Math.random() * 2); // 0-1 goles
        awayGoals = teamLevel === 'elite' ? (2 + Math.floor(Math.random() * 2)) : (3 + Math.floor(Math.random() * 3));
      } else {
        // Derrota normal
        homeGoals = Math.floor(Math.random() * 2); // 0-1 goles
        awayGoals = 1 + Math.floor(Math.random() * 2); // 1-2 goles rival
      }
    }
    
    return {
      homeGoals: homeGoals,
      awayGoals: awayGoals,
      performance: performance,
      teamLevel: teamLevel
    };
  }
  
  function getPerformanceText(performance) {
    if (performance >= 95) return 'Rendimiento Excepcional üî•';
    if (performance >= 80) return 'Buen Rendimiento ‚≠ê';
    if (performance >= 60) return 'Rendimiento Normal ‚úÖ';
    if (performance >= 30) return 'Rendimiento Bajo ‚ö†Ô∏è';
    return 'Rendimiento P√©simo üíÄ';
  }
  
  // Funci√≥n para mostrar notificaciones
  function showNotification(message, type = 'info') {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 z-[60] px-6 py-3 rounded-lg shadow-lg transform transition-all duration-300 translate-x-full ${
      type === 'success' ? 'bg-green-600 text-white' : 
      type === 'error' ? 'bg-red-600 text-white' : 
      'bg-blue-600 text-white'
    }`;
    notification.textContent = message;
    
    document.body.appendChild(notification);
    
    // Mostrar animaci√≥n
    setTimeout(() => {
      notification.classList.remove('translate-x-full');
    }, 100);
    
    // Ocultar despu√©s de 4 segundos
    setTimeout(() => {
      notification.classList.add('translate-x-full');
      setTimeout(() => {
        document.body.removeChild(notification);
      }, 300);
    }, 4000);
  }

  // Cargar datos cuando se carga la p√°gina
  document.addEventListener('DOMContentLoaded', () => {
    loadStandings();
    loadUpcomingMatches();
    loadTopScorers();
    loadTopAssists();
    initializeModal();
  });
