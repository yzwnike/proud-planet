---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Pichichi - M√°ximos Goleadores La Liga 2025/26" 
  description="Ranking de m√°ximos goleadores de La Liga EA Sports 2025/26"
>
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-yellow-900 to-slate-900">
    <div class="container mx-auto px-4 py-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
          <span class="bg-gradient-to-r from-yellow-400 to-orange-600 bg-clip-text text-transparent">
            ‚öΩ Trofeo Pichichi
          </span>
        </h1>
        <p class="text-xl text-gray-300 mb-2">M√°ximos Goleadores - Temporada 2025/26</p>
        <div class="flex justify-center items-center gap-4 text-gray-400">
          <span class="px-3 py-1 bg-yellow-600/20 rounded-full text-sm">Actualizado en tiempo real</span>
        </div>
      </div>

      <!-- Navegaci√≥n de secciones -->
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        <a href="/laliga/" class="px-6 py-3 bg-gradient-to-r from-orange-500 to-red-600 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          üìä Clasificaci√≥n
        </a>
        <a href="/laliga/pichichi" class="px-6 py-3 bg-gradient-to-r from-yellow-500 to-orange-500 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 ring-2 ring-yellow-400">
          ‚öΩ Pichichi
        </a>
        <a href="/laliga/asistencias" class="px-6 py-3 bg-gradient-to-r from-green-500 to-blue-500 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          üÖ∞Ô∏è Asistencias
        </a>
        <a href="/laliga/proximos" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          üìÖ Pr√≥ximos Partidos
        </a>
      </div>

      <!-- Ranking de Goleadores -->
      <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-2xl p-6 mb-8">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-white">üèÜ Ranking de Goleadores</h2>
          <div class="flex items-center gap-2 text-gray-300">
            <span class="w-2 h-2 bg-yellow-500 rounded-full animate-pulse"></span>
            <span class="text-sm">Actualizado autom√°ticamente</span>
          </div>
        </div>

        <!-- Loading placeholder -->
        <div id="loading-scorers" class="flex justify-center items-center py-12">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-yellow-500"></div>
          <span class="ml-4 text-white">Cargando goleadores...</span>
        </div>

        <!-- Tabla de goleadores -->
        <div id="scorers-container" class="hidden">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <div id="scorers-list"></div>
          </div>
        </div>
      </div>

      <!-- Estad√≠sticas adicionales -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-white mb-3">üìà Estad√≠sticas</h3>
          <div class="space-y-2">
            <div class="flex justify-between text-gray-300">
              <span>Total de goles:</span>
              <span id="total-goals" class="text-yellow-400">0</span>
            </div>
            <div class="flex justify-between text-gray-300">
              <span>Goleadores activos:</span>
              <span id="active-scorers" class="text-green-400">0</span>
            </div>
            <div class="flex justify-between text-gray-300">
              <span>Mejor promedio:</span>
              <span id="best-average" class="text-orange-400">0.0</span>
            </div>
          </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-white mb-3">üî• M√°ximo Goleador</h3>
          <div id="top-scorer" class="text-center">
            <div class="animate-pulse bg-gray-700/50 rounded-lg p-4">
              <div class="h-4 bg-gray-600 rounded mb-2"></div>
              <div class="h-6 bg-gray-600 rounded"></div>
            </div>
          </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-white mb-3">‚ö° Mejor Promedio</h3>
          <div id="best-avg-scorer" class="text-center">
            <div class="animate-pulse bg-gray-700/50 rounded-lg p-4">
              <div class="h-4 bg-gray-600 rounded mb-2"></div>
              <div class="h-6 bg-gray-600 rounded"></div>
            </div>
          </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-white mb-3">üéØ Temporada</h3>
          <div class="text-center text-gray-300">
            <p class="text-sm">2025/26</p>
            <p class="text-2xl font-bold text-yellow-400">Jornada 0</p>
            <p class="text-xs text-gray-400">Inicio: 15 Ago 2025</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Funci√≥n para cargar goleadores
  async function loadScorers() {
    try {
      const response = await fetch('/api/laliga/pichichi');
      const result = await response.json();
      
      if (result.success) {
        displayScorers(result.data.goleadores);
        updateStats(result.data.goleadores);
      } else {
        throw new Error(result.error);
      }
    } catch (error) {
      console.error('Error loading scorers:', error);
      document.getElementById('scorers-list').innerHTML = `
        <div class="col-span-full text-center py-12">
          <div class="text-6xl mb-4">‚öΩ</div>
          <h3 class="text-2xl font-bold text-white mb-2">Sin goleadores a√∫n</h3>
          <p class="text-gray-400">La temporada 2025/26 comenzar√° ma√±ana</p>
          <p class="text-sm text-gray-500 mt-2">15 de Agosto de 2025</p>
        </div>
      `;
      
      // Actualizar estad√≠sticas vac√≠as
      document.getElementById('total-goals').textContent = '0';
      document.getElementById('active-scorers').textContent = '0';
      document.getElementById('best-average').textContent = '0.0';
      document.getElementById('top-scorer').innerHTML = `
        <div class="text-center text-gray-400">
          <div class="text-3xl mb-2">üèÜ</div>
          <p class="text-sm">Sin goleadores</p>
          <p class="text-xs">Temporada sin empezar</p>
        </div>
      `;
      document.getElementById('best-avg-scorer').innerHTML = `
        <div class="text-center text-gray-400">
          <div class="text-3xl mb-2">‚ö°</div>
          <p class="text-sm">Sin datos</p>
          <p class="text-xs">Temporada sin empezar</p>
        </div>
      `;
    } finally {
      document.getElementById('loading-scorers').classList.add('hidden');
      document.getElementById('scorers-container').classList.remove('hidden');
    }
  }

  // Funci√≥n para mostrar goleadores
  function displayScorers(scorers) {
    const container = document.getElementById('scorers-list');
    
    if (scorers.length === 0) {
      container.innerHTML = `
        <div class="col-span-full text-center py-12">
          <div class="text-6xl mb-4">‚öΩ</div>
          <h3 class="text-2xl font-bold text-white mb-2">Sin goleadores a√∫n</h3>
          <p class="text-gray-400">La temporada 2025/26 comenzar√° ma√±ana</p>
          <p class="text-sm text-gray-500 mt-2">15 de Agosto de 2025</p>
        </div>
      `;
      return;
    }

    container.className = 'grid grid-cols-1 gap-4';
    container.innerHTML = scorers.map((scorer, index) => {
      let medalClass = '';
      let medal = '';
      
      if (index === 0) {
        medalClass = 'bg-gradient-to-r from-yellow-400 to-yellow-600 text-black';
        medal = 'ü•á';
      } else if (index === 1) {
        medalClass = 'bg-gradient-to-r from-gray-300 to-gray-500 text-black';
        medal = 'ü•à';
      } else if (index === 2) {
        medalClass = 'bg-gradient-to-r from-amber-600 to-amber-800 text-white';
        medal = 'ü•â';
      } else {
        medalClass = 'bg-white/10';
        medal = `#${index + 1}`;
      }

      return `
        <div class="${medalClass} backdrop-blur-sm rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-3">
              <span class="text-2xl font-bold">${medal}</span>
              <div>
                <h3 class="font-bold text-lg ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-white'}">${scorer.jugador}</h3>
                <p class="text-sm ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-300'}">${scorer.equipo}</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-3xl font-bold ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-yellow-400'}">${scorer.goles}</div>
              <div class="text-sm ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-400'}">goles</div>
            </div>
          </div>
          
          <div class="grid grid-cols-3 gap-4 pt-4 border-t ${index < 3 ? (index === 0 ? 'border-black/20' : index === 1 ? 'border-black/20' : 'border-white/20') : 'border-white/20'}">
            <div class="text-center">
              <div class="text-lg font-semibold ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-white'}">${scorer.partidos}</div>
              <div class="text-xs ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-400'}">Partidos</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-semibold ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-white'}">${scorer.minutos}</div>
              <div class="text-xs ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-400'}">Minutos</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-semibold ${index < 3 ? (index === 0 ? 'text-black' : index === 1 ? 'text-black' : 'text-white') : 'text-orange-400'}">${scorer.goles_por_partido.toFixed(2)}</div>
              <div class="text-xs ${index < 3 ? (index === 0 ? 'text-black/80' : index === 1 ? 'text-black/80' : 'text-gray-200') : 'text-gray-400'}">Por partido</div>
            </div>
          </div>
        </div>
      `;
    }).join('');
  }

  // Funci√≥n para actualizar estad√≠sticas
  function updateStats(scorers) {
    const totalGoals = scorers.reduce((sum, scorer) => sum + scorer.goles, 0);
    const activeScorers = scorers.length;
    const bestAverage = scorers.length > 0 ? Math.max(...scorers.map(s => s.goles_por_partido)) : 0;
    
    document.getElementById('total-goals').textContent = totalGoals;
    document.getElementById('active-scorers').textContent = activeScorers;
    document.getElementById('best-average').textContent = bestAverage.toFixed(2);

    if (scorers.length > 0) {
      const topScorer = scorers[0];
      document.getElementById('top-scorer').innerHTML = `
        <div class="text-center">
          <div class="text-4xl mb-2">üèÜ</div>
          <h4 class="font-bold text-white">${topScorer.jugador}</h4>
          <p class="text-sm text-gray-400">${topScorer.equipo}</p>
          <p class="text-2xl font-bold text-yellow-400">${topScorer.goles} goles</p>
        </div>
      `;

      const bestAvgScorer = scorers.reduce((best, current) => 
        current.goles_por_partido > best.goles_por_partido ? current : best
      );
      
      document.getElementById('best-avg-scorer').innerHTML = `
        <div class="text-center">
          <div class="text-4xl mb-2">‚ö°</div>
          <h4 class="font-bold text-white">${bestAvgScorer.jugador}</h4>
          <p class="text-sm text-gray-400">${bestAvgScorer.equipo}</p>
          <p class="text-2xl font-bold text-orange-400">${bestAvgScorer.goles_por_partido.toFixed(2)}</p>
        </div>
      `;
    }
  }

  // Cargar datos cuando se carga la p√°gina
  document.addEventListener('DOMContentLoaded', () => {
    loadScorers();
    
    // Actualizar cada 30 segundos
    setInterval(loadScorers, 30000);
  });
</script>
</BaseLayout>
